            <td class="item" id="1"><button>1</button></td>
            <td class="item" id="2"><button>2</button></td>
            <td class="item" id="3"><button>3</button></td>
            <td class="item operation" id="-"><button>-</button></td>
        </tr>
        <tr class="line">
            <td class="item" id="."><button>.</button></td>
            <td class="item" id="0"><button>0</button></td>
            <td class="item operation" id="+"><button>+</button></td>
            <td class="item operation" id="="><button>=</button></td>
